<UserControl x:Class="Editor.Controls.GPXExportButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
  <Button x:Name="buttonExport" Command="{Binding ExportCommand}" CommandParameter="{Binding}" VerticalAlignment="Center" FontWeight="Bold" FontSize="10.667" Padding="2,1,2,1" Background="Transparent" BorderThickness="0" Margin="6,0,0,0" >
    <Grid>
      <Label Margin="2,-1">GPX</Label>
      <Border BorderBrush="Gray" BorderThickness="1" Opacity="0.75" CornerRadius="5" />
    </Grid>
  </Button>
</UserControl>
