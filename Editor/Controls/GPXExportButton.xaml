<UserControl x:Class="Editor.Controls.GPXExportButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
  <Button Command="{Binding ExportCommand}" 
          CommandParameter="{Binding}" 
          VerticalAlignment="Center" 
          FontWeight="Bold" 
          FontSize="10.667" 
          Padding="0" 
          Background="Transparent" 
          ToolTip="Export as GPX format"
          Height="28"
          Width="38" 
          Margin="2,0" 
          BorderThickness="0" >
    <Grid>
      <Label>GPX</Label>
      <Border BorderBrush="Gray" BorderThickness="1.5" Opacity="0.75" CornerRadius="8" Padding="0" Margin="-4,-2,-3,-2"/>
    </Grid>
  </Button>
</UserControl>
